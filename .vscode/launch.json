{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "utilities",
			"type": "pwa-node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/modules/utilities/src/_para/debug.ts",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			],
			"preLaunchTask": "build-utilities",
			"console": "integratedTerminal"
		},
		{
			"name": "style-definition",
			"type": "pwa-node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/modules/style-definition/src/_para/debug.ts",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			],
			"preLaunchTask": "build-style-definition",
			"console": "integratedTerminal",
			"envFile": "${workspaceFolder}/modules/style-definition/.env"
		},
		{
			"name": "style-service",
			"type": "pwa-node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/modules/style-service/src/_para/debug.ts",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			],
			"preLaunchTask": "build-style-service",
			"console": "integratedTerminal"
		},
		{
			"name": "client",
			"type": "node",
			"request": "attach",
			"skipFiles": [
				"<node_internals>/**"
			],
			"port": 9229,
			"configurations": [
				{
					"sourceMapPathOverrides": {
						"webpack:///./*": "${workspaceRoot}/client/*",
					}
				}
			]
		},
		{
			"name": "lambdas",
			"type": "pwa-node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**/*.js"
			],
			"program": "${file}",
			"envFile": "${workspaceFolder}/lambdas/prod/.env",
			"console": "integratedTerminal"
		},
		{
			"name": "client-content",
			"type": "pwa-node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**/*.js"
			],
			"program": "${workspaceFolder}/modules/client-content/_para/debug.js",
			"envFile": "${workspaceFolder}/lambdas/prod/.env",
			"console": "integratedTerminal"
		}
	]
}
