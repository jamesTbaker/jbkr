{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Authors": {
      "collection": "author",
      "via": "Articles",
      "dominant": true
    },
    "Featured": {
      "type": "boolean"
    },
    "PublicationDate": {
      "type": "date",
      "required": false
    },
    "UpdateDate": {
      "type": "date"
    },
    "Slug": {
      "type": "string",
      "required": true
    },
    "Title": {
      "type": "string",
      "required": true
    },
    "Subtitle": {
      "type": "string"
    },
    "Tagline": {
      "type": "string"
    },
    "MetaTitle": {
      "type": "string"
    },
    "MetaDescription": {
      "type": "text"
    },
    "SocialDescription": {
      "type": "text"
    },
    "TeaserDescription": {
      "type": "text"
    },
    "BriefStatements": {
      "type": "component",
      "repeatable": true,
      "component": "content.article-brief-statement"
    },
    "IntroText": {
      "type": "richtext"
    },
    "IntroVideo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "Section": {
      "type": "component",
      "repeatable": true,
      "component": "content.article-section"
    },
    "SimpleBody": {
      "type": "richtext"
    },
    "Image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "IntroVideoPoster": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "FeaturedArticleLargeTeaserVideo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "TweetText": {
      "type": "text"
    },
    "Distributed": {
      "type": "boolean"
    }
  }
}
