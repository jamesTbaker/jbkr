{
  "kind": "collectionType",
  "collectionName": "screens",
  "info": {
    "name": "Screen",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "MetaTitle": {
      "type": "string",
      "required": true
    },
    "MetaDescription": {
      "type": "text"
    },
    "SocialDescription": {
      "type": "text"
    },
    "MetaImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "MetaImageGravity": {
      "type": "enumeration",
      "enum": [
        "center",
        "north",
        "south",
        "east",
        "west",
        "north_east",
        "south_east",
        "north_west",
        "south_west"
      ],
      "default": "center"
    },
    "OpenGraphType": {
      "type": "enumeration",
      "enum": [
        "website",
        "article",
        "profile"
      ],
      "default": "website"
    },
    "MetaOther": {
      "type": "json"
    },
    "ScreenID": {
      "type": "string",
      "required": true
    },
    "Slug": {
      "type": "string",
      "required": false
    },
    "UniqueContentItems": {
      "type": "component",
      "repeatable": true,
      "component": "content.screen-content-item"
    }
  }
}
