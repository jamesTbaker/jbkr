{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Subtitle": {
      "type": "string"
    },
    "Snippet": {
      "type": "richtext",
      "required": true
    },
    "PublicationDate": {
      "type": "datetime",
      "required": true
    },
    "Body": {
      "type": "richtext",
      "required": true
    },
    "Slug": {
      "type": "string",
      "required": true
    },
    "Authors": {
      "via": "Posts",
      "collection": "author",
      "dominant": true
    },
    "Cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "SnippetDescription": {
      "type": "richtext",
      "required": true,
      "maxLength": 220
    },
    "SocialDescription": {
      "type": "text",
      "required": true,
      "maxLength": 200
    },
    "MetaDescription": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "Tagline": {
      "type": "string",
      "required": false,
      "maxLength": 200
    },
    "MetaTitle": {
      "type": "string"
    }
  }
}
