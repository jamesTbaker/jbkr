{
  "kind": "collectionType",
  "collectionName": "complex_screens",
  "info": {
    "name": "ComplexScreen",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Intro": {
      "type": "text"
    },
    "BriefStatement": {
      "type": "component",
      "repeatable": true,
      "component": "content.brief-statement"
    },
    "Section": {
      "type": "component",
      "repeatable": true,
      "component": "content.complex-screen-section"
    },
    "SnippetDescription": {
      "type": "richtext",
      "required": true
    },
    "Slug": {
      "type": "string"
    },
    "Subtitle": {
      "type": "string"
    },
    "PublicationDate": {
      "type": "datetime",
      "required": true
    },
    "SocialDescription": {
      "type": "text",
      "required": true,
      "maxLength": 200
    },
    "MetaDescription": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "Tagline": {
      "type": "string",
      "maxLength": 200
    },
    "MetaTitle": {
      "type": "string",
      "required": true
    },
    "Featured": {
      "type": "boolean"
    },
    "MetaImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "MetaImageGravity": {
      "type": "enumeration",
      "enum": [
        "center",
        "north",
        "south",
        "east",
        "west",
        "north_east",
        "south_east",
        "north_west",
        "south_west"
      ]
    }
  }
}
